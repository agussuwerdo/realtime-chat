{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/(.*\\.html)$", "dest": "/$1" },
    { "src": "/apidoc/(.*)", "dest": "/apidoc/$1" },
    { "src": "/client/(.*)", "dest": "/client/$1/$2" },
    { "src": "/public/(.*)", "dest": "/public/$1/$2" },
    { "src": "/(.*)", "dest": "/server/index.js" }
  ],
  "env": {
    "REACT_APP_PUSHER_KEY": "@REACT_APP_PUSHER_KEY",
    "REACT_APP_PUSHER_CLUSTER": "@REACT_APP_PUSHER_CLUSTER"
  }
}
